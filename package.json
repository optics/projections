{
  "name": "@optiqs/projections",
  "description": "Projection library for optics",
  "version": "1.1.0",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "keywords": [
    "optics",
    "projections"
  ],
  "sideEffects": [
    "lib/projection.js",
    "lib/index.js"
  ],
  "scripts": {
    "build": "rimraf lib/ && tsc && babel ./src --out-dir lib --extensions '.ts' --ignore '**/*.test.ts'",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "pre-commit": "lint-staged --quiet && npm run build",
    "prepublishOnly": "npm run lint-fix && npm run prettier-write && npm run build",
    "prettier-check": "prettier --config .prettierrc --check src/**",
    "prettier-write": "prettier --config .prettierrc --write src/**",
    "check-updates": "ncu"
  },
  "peerDependencies": {
    "fp-ts": "^2.8.6",
    "monocle-ts": "^2.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "fp-ts": "^2.8.6",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "monocle-ts": "^2.3.3",
    "npm-check-updates": "^10.2.2",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}